<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServicesVehiculo.Views.ContratoPage">


    <StackLayout Padding="10" Spacing="10">
        <Label Text="Ingrese el ID del Contrato:" FontSize="Medium" />
        <Entry x:Name="ContratoIdEntry" Placeholder="ID del Contrato" Keyboard="Numeric" />

        <Button Text="Buscar Contrato" Clicked="OnBuscarContratoClicked" Margin="10" />

        <Image x:Name="ContratoImage" IsVisible="False" />
    </StackLayout>
</ContentPage>